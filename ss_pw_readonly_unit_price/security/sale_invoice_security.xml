<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
        <record id="readonly_unit_price" model="ir.module.category">
            <field name="name">Readonly Unit Price</field>
            <field name="description">Helps you readonly unit price for user</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_sale_unit_price" model="res.groups">
            <field name="name">Readonly Sale Price</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="category_id" ref="readonly_unit_price"/>
        </record>
        
        <record id="group_invoice_unit_price" model="res.groups">
            <field name="name">Readonly Invoice Price</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="category_id" ref="readonly_unit_price"/>
        </record>
  </data>
</odoo>

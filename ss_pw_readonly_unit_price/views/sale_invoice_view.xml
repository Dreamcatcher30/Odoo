<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_readonly_price_unit" model="ir.ui.view">
         <field name="name">sale.order.form.inherit.readonly.price_unit</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_order_form" />
         <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_readonly_price" invisible="1"/>
            </field>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.is_readonly_price', '=', True)]}</attribute>
            </xpath>
         </field>
    </record>
    <record id="view_move_form_inherit_readonly_price_unit" model="ir.ui.view">
        <field name="name">invoice.form.inherit.readonly.price.unit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_readonly_price" invisible="1"/>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': [('parent.is_readonly_price', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
